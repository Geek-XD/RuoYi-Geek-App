{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames":true,
        "outDir": "dist/compiled",
        "allowJs": true,
        "lib": ["es2015"],
        "baseUrl": "./",
        "paths": {
            "@": [
                "src"
            ],
            "@/*": [
                "src/*"
            ],
            "vue": ["node_modules/vue"]
        },
    },
    "include": ["src/**/*.ts"]
}